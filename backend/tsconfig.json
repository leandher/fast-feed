{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6"
		],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
	}
}